# {{ ansible_managed }}
<VirtualHost *:80>
    ServerName {{ vhost }}
    DocumentRoot {{ docroot }}

    <Directory {{ docroot }}>
        Options -Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>

    CustomLog ${APACHE_LOG_DIR}/access_{{ vhost }}.log combined
    ErrorLog ${APACHE_LOG_DIR}/error_{{ vhost }}.log
</VirtualHost>
