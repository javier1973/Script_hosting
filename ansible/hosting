- hosts: all
  remote_user: root
  sudo: yes

  tasks:
  - name: install apache2
    apt: name=apache2 state=present
    apt: name=php5 state=present

  - name: install bind9
    apt: name=bind9 state=present

  - name: install proftpd
    apt: name=proftpd-basic state=present

  - name: install MYSQL
    apt: name=mysqlserver state=present
    apt: namr=phpmyadmin state=present

  - name: crear usuario mysql
    mysql_user: name=perico password=12345 priv=*.*:ALL,GRANT state=present      
